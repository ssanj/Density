<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScreenSizeFrame">
        <item name="android:background">@drawable/screen_size_frame</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ResolutionCommonHeader">
        <item name="android:background">@drawable/resolution_common_header</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/resolution_common_header_padding</item>
    </style>

    <style name="ScreenSizeLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/screen_size_text_label</item>
        <item name="android:padding">@dimen/screen_size_text_label_padding</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ScreenSizeText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/screen_size_text_padding</item>
        <item name="android:textSize">@dimen/screen_size_text_size</item>
    </style>

    <style name="ScreenSizeInches" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/lime_green</item>
        <item name="android:paddingRight">@dimen/screen_size_text_padding</item>
        <item name="android:textSize">@dimen/screen_size_text_size</item>
    </style>

    <style name="ResolutionValue" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/resolution_value_size</item>
        <item name="android:padding">@dimen/resolution_value_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ResolutionMultiplier" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/resolution_multiplier_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DensityResultText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/density_result_text_size</item>
    </style>

    <style name="DensityProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">@dimen/main_seekbar_height</item>
        <item name="android:maxHeight">@dimen/main_seekbar_height</item>
        <item name="android:padding">@dimen/screen_size_fragment_margin</item>
    </style>

    <style name="DensityResultTop">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:background">@drawable/density_result_top</item>
        <!--<item name="android:layout_width">fill_parent"</item>-->
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DensityResultBottom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:background">@drawable/density_result_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>