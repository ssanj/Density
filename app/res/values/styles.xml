<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScreenSizeFrame">
        <item name="android:background">@drawable/screen_size_frame</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScreenSizeLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/screen_size_text_label</item>
        <item name="android:padding">@dimen/screen_size_text_label_padding</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ScreenSizeText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/screen_size_text_padding</item>
        <item name="android:textSize">@dimen/loading_screen_text_size</item>
    </style>

    <style name="ScreenSizeInches" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/lime_green</item>
        <item name="android:paddingRight">@dimen/screen_size_text_padding</item>
        <item name="android:textSize">@dimen/loading_screen_text_size</item>
    </style>

    <style name="DensityProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">@dimen/main_seekbar_height</item>
        <item name="android:maxHeight">@dimen/main_seekbar_height</item>
        <item name="android:padding">@dimen/screen_size_fragment_margin</item>
    </style>
</resources>