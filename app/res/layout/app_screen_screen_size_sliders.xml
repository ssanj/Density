<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_screen_screensize_integer_progress"
                    android:max="@integer/app_screen_screensize_integer_progress_max_value"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                />
                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/app_screen_screensize_decimal_progress"
                    android:max="@integer/app_screen_screensize_decimal_progress_max_value"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                />
            </LinearLayout>
        </LinearLayout>